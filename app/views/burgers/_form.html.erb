<%= form_with(model: burger) do |form| %>
  <% if burger.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(burger.errors.count, "error") %> prohibited this burger from being saved:</h2>

      <ul>
        <% burger.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div id="create_burger">
  <div id="form_burger">
    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.text_area :image %>
    </div>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_area :name %>
    </div>

    <div>
      <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div>
      <%= form.label :veggie, style: "display: block" %>
      <%= form.check_box :veggie %>
    </div>

    <div class="submit-button">
      <%= form.submit %>
    </div>
  </div>
</div>
<% end %>
